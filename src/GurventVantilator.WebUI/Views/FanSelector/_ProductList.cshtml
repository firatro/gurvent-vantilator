@using GurventVantilator.Application.DTOs
@model IEnumerable<ProductDto>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Bu modele ait ürün bulunamadı.</div>
    return;
}

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-lg-4 col-md-6 mb-35">
            <div class="it-service-2-item">

                <div class="it-service-2-thumb">
                    <img src="http://admin.gurvent.firatramazano.com/@p.Image1Path"
                           style="width:100%; height:180px; object-fit:contain; border-radius:12px; padding:25px" />
                </div>

                <div class="mt-3 text-center">
                    <h3 class="it-service-2-title">
                        <a href="@Url.Action("Detail", "Product", new { id = p.Id })">
                            @p.Name
                        </a>
                    </h3>
                </div>

            </div>
        </div>
    }
</div>
