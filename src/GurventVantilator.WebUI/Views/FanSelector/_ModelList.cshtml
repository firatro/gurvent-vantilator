@model ModelListViewModel

@if (Model.Models == null || !Model.Models.Any())
{
    <div class="d-flex justify-content-center align-items-center" style="height:300px; text-align:center;">
        <div style="margin-top:160px;">
            <img src="/img/icon/gurventtelefon.jpg" style="width:280px; opacity:0.6;" />
            <h4 style="color:#296299; font-weight:600;">Model Bulunamadı</h4>
            <p style="color:#666;">Seçtiğiniz kategoriye uygun model bulunamadı.</p>
        </div>
    </div>
    return;
}

<h3 class="mb-4">@Model.SelectedSeriesName Modelleri</h3>

<div class="row">
    @foreach (var m in Model.Models)
    {
        <div class="col-xl-4 col-lg-4 col-md-6 mb-30">

            <a href="@Url.Action("Detail", "Model", new { id = m.Id, source = "fanselector" })">

                <div class="it-service-2-item p-relative h-100">

                    <div class="it-service-2-thumb">
                        <img src="http://admin.gurvent.firatramazano.com/@m.Image1Path"
                            style="width:100%; height:180px; object-fit:contain; border-radius:12px; padding:25px" />
                    </div>

                    <div class="mt-3 text-center">
                        <h4 class="mb-0">
                            @m.Name
                        </h4>
                    </div>

                </div>

            </a>

        </div>
    }
</div>