@model SeriesListViewModel

@if (Model.Series == null || !Model.Series.Any())
{
    <div class="d-flex justify-content-center align-items-center" 
         style="height:300px; text-align:center;">

        <div style="margin-top:160px;">  
            <img src="/img/icon/gurventtelefon.jpg" 
                 style="width:280px; opacity:0.6; margin-bottom:15px;" />

            <h4 style="color:#296299; font-weight:600;">
                Sonuç Bulunamadı
            </h4>

            <p style="color:#666; max-width:350px; margin:10px auto;">
                Opps... Eşleşme hatalı yapılmış olabilir. 
                Lütfen seçimlerinizi tekrar kontrol edin veya satış ekibimizle iletişime geçiniz.
            </p>
        </div>

    </div>
    return;
}

<h3 class="mb-4">Seriler</h3>

<div class="row">
@foreach (var s in Model.Series)
{
    <div class="col-xl-4 col-lg-4 col-md-6 mb-35">

        <a href="@Url.Action("Index", "FanSelector", new {
                usageId = Model.SelectedUsageId,
                workingId = Model.SelectedWorkingId,
                seriesId = s.Id,
                mode = "category",
                scroll = "results"
            })"
           class="text-decoration-none">

            <div class="it-service-2-item p-relative h-100">

                <div class="it-service-2-thumb">
                    <img src="http://admin.gurvent.firatramazano.com/@s.ImagePath"
                         style="width:100%; height:180px; object-fit:contain; border-radius:12px; padding:25px" />
                </div>

                <div class="mt-3 text-center">
                    <h4 class="mb-0">
                        @s.Name
                    </h4>
                </div>

            </div>

        </a>

    </div>
}
</div>
