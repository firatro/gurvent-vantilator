@using GurventVantilator.Infrastructure.Identity
@model IEnumerable<ApplicationRole>

@{
    ViewData["Title"] = "Rol Yönetimi";
}

<div class="row">
    <div class="col">
        <div class="card card-modern">
            <div class="card-body">
                <div class="datatables-header-footer-wrapper mt-2">
                    <div class="datatable-header">
                        <div class="row align-items-center mb-3">
                            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                <a asp-action="Create"
                                    class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">
                                    + Yeni Rol Ekle
                                </a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list"
                        style="min-width: 550px;">
                        <thead>
                            <tr>
                                <th width="50" class="text-center">Id</th>
                                <th class="text-center">Rol Adı</th>
                                <th class="text-center">Açıklama</th>
                                <th width="200" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        Henüz rol kaydı bulunamadı.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td class="text-center"><strong>@role.Id</strong></td>
                                        <td class="text-center"><strong>@role.Name</strong></td>
                                        <td class="text-center">@role.Description</td>
                                        <td class="text-center">
                                            <div class="btn-group d-flex" role="group">
                                                @* Rol düzenleme istersen daha sonra eklenecek *@
                                                <a href="#deleteModal"
                                                    class="btn btn-danger btn-xs w-100 m-1 rounded modal-basic"
                                                    onclick="setDeleteRoleId(@role.Id)">
                                                    <i class='far fa-trash-alt'></i> Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <hr class="solid mt-5 opacity-4">

                    @* Silme Modal *@
                    <div id="deleteModal" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">Rol Silme</h2>
                            </header>
                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p class="mb-0">Bu rolü silmek istediğinize emin misiniz?</p>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <form id="DeleteForm" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" id="roleId" />
                                    <div class="row">
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-danger">Sil</button>
                                            <button type="button" class="btn btn-default modal-dismiss">Vazgeç</button>
                                        </div>
                                    </div>
                                </form>
                            </footer>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/examples/examples.modals.js"></script>
    <script src="~/vendor/pnotify/pnotify.custom.js"></script>
    <script>
        function setDeleteRoleId(roleId) {
            document.getElementById("roleId").value = roleId;
        }
    </script>
}