@using GurventVantilator.Application.DTOs
@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "KullanÄ±cÄ± Listesi";
}


<div class="row">
    <div class="col">
        <div class="card card-modern">
            <div class="card-body">
                <div class="datatables-header-footer-wrapper mt-2">
                    <div class="datatable-header">
                        <div class="row align-items-center mb-3">
                            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                <a asp-action="Create"
                                    class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">+ KullanÄ±cÄ±
                                    Ekle</a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list"
                        style="min-width: 550px;">
                        <thead>
                            <tr>
                                <th width="30" class="text-center">#</th>
                                <th class="text-center">KullanÄ±cÄ± AdÄ±</th>
                                <th class="text-center">Ad Soyad</th>
                                <th class="text-center">E-posta</th>
                                <th class="text-center">Roller</th>
                                <th class="text-center">Durum</th>
                                <th width="30" class="text-center">Ä°ÅŸlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        HiÃ§ kayÄ±t bulunamadÄ±.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center"><strong><a href="#">@i</a></strong></td>
                                        <td class="text-center"><strong><a href="#">@item.UserName</a></strong></td>
                                        <td class="text-center">@($"{item.FirstName} {item.LastName}")</td>
                                        <td class="text-center">@item.Email</td>
                                        <td class="text-center">
                                            @foreach (var role in item.Roles)
                                            {
                                                @if (@role.ToLower() == "devadmin")
                                                {
                                                    <span class="badge badge-dark">@role.ToLower()</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-primary">@role.ToLower()</span>
                                                }
                                            }
                                        </td>
                                        <td class="text-center">
                                            <button type="button"
                                                class="btn btn-xs toggle-status @(item.IsActive ? "btn-success" : "btn-secondary")"
                                                data-id="@item.Id" data-status="@item.IsActive">
                                                @(item.IsActive ? "Aktif" : "Pasif")
                                            </button>
                                        </td>
                                        <td width="250" class="text-center">
                                            <div class="btn-group d-flex" role="group">
                                                <!-- ðŸ”¹ Åžifre SÄ±fÄ±rla -->
                                                <form asp-action="ResetPassword" method="post" class="d-inline w-100 m-1">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="newPassword" value="Admin123!" />
                                                    <button type="submit" class="btn btn-primary btn-xs w-100 rounded"
                                                        title="Åžifreyi 'Admin123!' olarak sÄ±fÄ±rla">
                                                        <i class="bx bx-key"></i> Åžifre SÄ±fÄ±rla
                                                    </button>
                                                </form>
                                                @if (User.IsInRole("DevAdmin"))
                                                {
                                                    <a href="#deleteModal"
                                                        class="btn btn-danger btn-xs w-100 m-1 rounded modal-basic"
                                                        onclick="setDeleteUserId(@item.Id)">
                                                        <i class='far fa-trash-alt'></i> Sil
                                                    </a>
                                                }
                                            </div>
                                        </td>

                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                    <hr class="solid mt-5 opacity-4">
                    <!-- KullanÄ±cÄ± Silme Modal -->
                    <div id="deleteModal" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">KullanÄ±cÄ± Silme</h2>
                            </header>
                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p class="mb-0">Bu kullanÄ±cÄ±yÄ± silmek istediÄŸinize emin misiniz?</p>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <form id="Delete" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" id="userId" />
                                    <div class="row">
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-danger">Sil</button>
                                            <button type="button" class="btn btn-default modal-dismiss">VazgeÃ§</button>
                                        </div>
                                    </div>
                                </form>
                            </footer>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.toggle-status').forEach(btn => {
            btn.addEventListener('click', async () => {
                const id = btn.getAttribute('data-id');
                const isActive = btn.getAttribute('data-status') === 'true';

                const response = await fetch('/User/ToggleStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken':
                            document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `id=${id}&isActive=${!isActive}`
                });

                if (response.ok) {
                    btn.setAttribute('data-status', (!isActive).toString());
                    btn.classList.toggle('btn-success');
                    btn.classList.toggle('btn-secondary');
                    btn.textContent = isActive ? 'Pasif' : 'Aktif';
                } else {
                    alert('Durum deÄŸiÅŸtirilemedi.');
                }
            });
        });
    </script>


    <script src="~/js/examples/examples.modals.js"></script>
    <script src="~/vendor/pnotify/pnotify.custom.js"></script>
    <script>
        function setDeleteUserId(userId) {
            document.getElementById("userId").value = userId;
        }
    </script>
}