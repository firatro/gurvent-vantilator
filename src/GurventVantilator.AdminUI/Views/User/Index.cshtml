@using GurventVantilator.Application.DTOs
@using GurventVantilator.Infrastructure.Identity
@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    var allRoles = ViewBag.AllRoles as List<ApplicationRole>;
}

<div class="row">
    <div class="col">
        <div class="card card-modern">
            <div class="card-body">
                <div class="datatables-header-footer-wrapper mt-2">
                    <div class="datatable-header">
                        <div class="row align-items-center mb-3">
                            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                <a asp-action="Create"
                                    class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">
                                    + Kullanıcı Ekle
                                </a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list"
                        style="min-width: 950px;">
                        <thead>
                            <tr>
                                <th width="30" class="text-center">#</th>
                                <th class="text-center">Kullanıcı Adı</th>
                                <th class="text-center">Ad Soyad</th>
                                <th class="text-center">E-posta</th>
                                <th class="text-center">Roller</th>
                                <th class="text-center">Rol İşlemleri</th>
                                <th class="text-center">Durum</th>
                                <th width="250" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">Hiç kayıt bulunamadı.</td>
                                </tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center"><strong>@i</strong></td>
                                        <td class="text-center"><strong>@item.UserName</strong></td>
                                        <td class="text-center">@($"{item.FirstName} {item.LastName}")</td>
                                        <td class="text-center">@item.Email</td>

                                        <!-- Roller -->
                                        <td class="text-center">
                                            @if (item.Roles.Any())
                                            {
                                                foreach (var role in item.Roles)
                                                {
                                                    <span class="badge @(role.ToLower() == "devadmin" ? "bg-dark" : "bg-primary") mx-1">
                                                        @role.ToLower()
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Rol atanmadı</span>
                                            }
                                        </td>

                                        <!-- Rol Ekle/Kaldır -->
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center align-items-center">
                                                <form asp-action="AddRole" method="post" class="d-flex me-2">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@item.Id" />
                                                    <select name="roleName" class="form-select form-select-sm me-1">
                                                        @foreach (var role in allRoles)
                                                        {
                                                            <option value="@role.Name">@role.Name</option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-success btn-xs" title="Rol Ekle">
                                                        <i class="bx bx-plus"></i>
                                                    </button>
                                                </form>

                                                <form asp-action="RemoveRole" method="post" class="d-flex">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@item.Id" />
                                                    <select name="roleName" class="form-select form-select-sm me-1">
                                                        @foreach (var role in item.Roles)
                                                        {
                                                            <option value="@role">@role</option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-danger btn-xs" title="Rol Kaldır">
                                                        <i class="bx bx-minus"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>

                                        <!-- Durum -->
                                        <td class="text-center">
                                            <button type="button"
                                                class="btn btn-xs toggle-status @(item.IsActive ? "btn-success" : "btn-secondary")"
                                                data-id="@item.Id" data-status="@item.IsActive">
                                                @(item.IsActive ? "Aktif" : "Pasif")
                                            </button>
                                        </td>

                                        <!-- İşlemler -->
                                        <td class="text-center">
                                            <div class="btn-group d-flex" role="group">
                                                <form asp-action="ResetPassword" method="post" class="d-inline w-100 m-1">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="newPassword" value="Admin123!" />
                                                    <button type="submit" class="btn btn-primary btn-xs w-100 rounded"
                                                        title="Şifreyi 'Admin123!' olarak sıfırla">
                                                        <i class="bx bx-key"></i> Şifre Sıfırla
                                                    </button>
                                                </form>

                                                @if (User.IsInRole("DevAdmin"))
                                                {
                                                    <a href="#deleteModal"
                                                        class="btn btn-danger btn-xs w-100 m-1 rounded modal-basic"
                                                        onclick="setDeleteUserId(@item.Id)">
                                                        <i class='far fa-trash-alt'></i> Sil
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>

                    <hr class="solid mt-5 opacity-4">

                    <!-- Kullanıcı Silme Modal -->
                    <div id="deleteModal" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">Kullanıcı Silme</h2>
                            </header>
                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p class="mb-0">Bu kullanıcıyı silmek istediğinize emin misiniz?</p>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <form id="Delete" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" id="userId" />
                                    <div class="row">
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-danger">Sil</button>
                                            <button type="button" class="btn btn-default modal-dismiss">Vazgeç</button>
                                        </div>
                                    </div>
                                </form>
                            </footer>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/examples/examples.modals.js"></script>
    <script src="~/vendor/pnotify/pnotify.custom.js"></script>
    <script>
        function setDeleteUserId(userId) {
            document.getElementById("userId").value = userId;
        }

        document.querySelectorAll('.toggle-status').forEach(btn => {
            btn.addEventListener('click', async () => {
                const id = btn.getAttribute('data-id');
                const isActive = btn.getAttribute('data-status') === 'true';

                const response = await fetch('/User/ToggleStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken':
                            document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `id=${id}&isActive=${!isActive}`
                });

                if (response.ok) {
                    btn.setAttribute('data-status', (!isActive).toString());
                    btn.classList.toggle('btn-success');
                    btn.classList.toggle('btn-secondary');
                    btn.textContent = isActive ? 'Pasif' : 'Aktif';
                } else {
                    alert('Durum değiştirilemedi.');
                }
            });
        });
    </script>
}