@using GurventVantilator.AdminUI.Models.TeamMember
@model TeamMemberCreateViewModel

@{
    ViewData["Title"] = "Ekip Üyesi Ekle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-user"></i>
                            <h2 class="card-big-info-title">Ekip Üyesi Ekle</h2>
                            <p class="card-big-info-desc">Ekip üyesi eklemek için bilgileri doldurun.</p>
                        </div>
                        <div class="col-lg-3-5 col-xl-4-5">
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="FullName">Ad
                                    Soyad</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="FullName"
                                        />
                                    <span asp-validation-for="FullName" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Title">Ünvan</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Title" />
                                <span asp-validation-for="Title" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Biography">Biografi</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea type="text" class="form-control form-control-modern" asp-for="Biography"
                                        rows="4"></textarea>
                                    <span asp-validation-for="Biography" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Phone">Telefon Numarası</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Phone" />
                                <span asp-validation-for="Phone" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Email">E-Posta Adresi</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Email" />
                                <span asp-validation-for="Email" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Website">Web Sitesi</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Website" />
                                <span asp-validation-for="Website" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Facebook">Facebook</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Facebook" />
                                <span asp-validation-for="Facebook" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Twitter">Twitter</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Twitter" />
                                <span asp-validation-for="Twitter" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Youtube">Youtube</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Youtube" />
                                <span asp-validation-for="Youtube" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Linkedin">LinkedIn</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Linkedin" />
                                <span asp-validation-for="Linkedin" class="badge badge-danger"></span>
                                </div>
                            </div>
                             <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Instagram">Instagram</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Instagram" />
                                <span asp-validation-for="Instagram" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Experience">Uzmanlık Alanları</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea type="text" class="form-control form-control-modern" asp-for="Experience"
                                        rows="4"></textarea>
                                    <span asp-validation-for="Experience" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="Skills">Yetenekler</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Skills" placeholder="Liderlik, C#, Ekip Yönetimi" />
                                <small class="form-text text-muted">
                                    Virgülle ayrılmış becerileri girin (ör. Liderlik, C#, Ekip Yönetimi)
                                </small>
                            <span asp-validation-for="Skills" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="ImageFile">Profil Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="ImageFile" class="form-control form-control-modern" accept=".jpg,.jpeg,.png,.webp"/>
                                    <span asp-validation-for="ImageFile" class="badge badge-danger"></span>
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                data-loading-text="Loading...">
                <i class="bx bx-save text-4 me-2"></i> Kaydet
            </button>
        </div>
        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
                class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">Geri
                Dön</a>
        </div>
    </div>
</form>
y