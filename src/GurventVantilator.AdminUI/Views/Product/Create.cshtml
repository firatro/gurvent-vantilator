@using GurventVantilator.AdminUI.Models.Product
@model ProductCreateViewModel

@{
    ViewData["Title"] = "Ürün Ekle";
}

@if (ViewBag.ProductCategoryList == null)
{
    <div class="alert alert-danger">ProductCategoryList boş geldi!</div>
}
@if (ViewBag.ProductApplications == null)
{
    <div class="alert alert-danger">ProductApplications boş geldi!</div>
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-spreadsheet"></i>
                            <h2 class="card-big-info-title">Ürün Ekle</h2>
                            <p class="card-big-info-desc">Ürün eklemek için bilgileri doldurun.</p>
                        </div>
                        <div class="col-lg-3-5 col-xl-4-5">

                            <!-- Ürün Adı -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="Name">Ürün
                                    Adı</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Name" class="form-control form-control-modern" />
                                    <span asp-validation-for="Name" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <!-- Ürün Kodu -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="Code">Ürün
                                    Kodu</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Code" class="form-control form-control-modern" />
                                    <span asp-validation-for="Code" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <!-- Açıklama -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Description">Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea asp-for="Description" rows="4"
                                        class="form-control form-control-modern"></textarea>
                                </div>
                            </div>

                            <!-- Kategori -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ProductCategoryId">Kategori</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="ProductCategoryId" asp-items="ViewBag.ProductCategoryList"
                                        class="form-control form-control-modern">
                                        <option value="">Kategori Seçiniz</option>
                                    </select>
                                    <span asp-validation-for="ProductCategoryId" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <!-- Uygulama Alanları -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Uygulama
                                    Alanları</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="SelectedApplicationIds" asp-items="ViewBag.ProductApplications"
                                        class="form-control form-control-modern" multiple size="5">
                                    </select>
                                    <small class="text-muted d-block mt-1">Birden fazla uygulama alanı
                                        seçebilirsiniz.</small>
                                </div>
                            </div>

                            <!-- Çap -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Çap</label>
                                <div class="col-lg-4 col-xl-4">
                                    <input asp-for="Diameter" class="form-control form-control-modern"
                                        placeholder="Değer giriniz" />
                                </div>
                                <div class="col-lg-3 col-xl-2">
                                    <select asp-for="DiameterUnit" class="form-control form-control-modern">
                                        <option value="mm">mm</option>
                                        <option value="cm">cm</option>
                                        <option value="inch">inch</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Hava Debisi -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Hava Debisi</label>
                                <div class="col-lg-4 col-xl-4">
                                    <input asp-for="AirFlow" class="form-control form-control-modern"
                                        placeholder="Min" />
                                </div>
                                <div class="col-lg-3 col-xl-2">
                                    <select asp-for="AirFlowUnit" class="form-control form-control-modern">
                                        <option value="m³/h">m³/h</option>
                                        <option value="m³/s">m³/s</option>
                                        <option value="L/s">L/s</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Basınç -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Basınç</label>
                                <div class="col-lg-4 col-xl-4">
                                    <input asp-for="Pressure" class="form-control form-control-modern"
                                        placeholder="Min" />
                                </div>
                                <div class="col-lg-3 col-xl-2">
                                    <select asp-for="PressureUnit" class="form-control form-control-modern">
                                        <option value="Pa">Pa</option>
                                        <option value="mmH₂O">mmH₂O</option>
                                        <option value="inH₂O">inH₂O</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Güç -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Güç</label>
                                <div class="col-lg-4 col-xl-4">
                                    <input asp-for="Power" class="form-control form-control-modern"
                                        placeholder="Değer giriniz" />
                                </div>
                                <div class="col-lg-3 col-xl-2">
                                    <select asp-for="PowerUnit" class="form-control form-control-modern">
                                        <option value="kW">kW</option>
                                        <option value="W">W</option>
                                        <option value="HP">HP</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Voltage / Frequency / Speed / Noise -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Voltaj (V)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Voltage" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Frekans (Hz)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Frequency" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <!-- Devir -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Devir</label>
                                <div class="col-lg-4 col-xl-4">
                                    <input asp-for="Speed" class="form-control form-control-modern"
                                        placeholder="Değer giriniz" />
                                </div>
                                <div class="col-lg-3 col-xl-2">
                                    <select asp-for="SpeedUnit" class="form-control form-control-modern">
                                        <option value="rpm">rpm</option>
                                        <option value="rps">rps</option>
                                    </select>
                                </div>
                            </div>


                            <!-- Ses Seviyesi -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Ses Seviyesi</label>
                                <div class="col-lg-4 col-xl-4">
                                    <input asp-for="NoiseLevel" class="form-control form-control-modern"
                                        placeholder="Değer giriniz" />
                                </div>
                                <div class="col-lg-3 col-xl-2">
                                    <select asp-for="NoiseLevelUnit" class="form-control form-control-modern">
                                        <option value="dB(A)">dB(A)</option>
                                        <option value="dB">dB</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Speed Control
                                    Method</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="SpeedControl" class="form-control form-control-modern">
                                        <option value="No Regulation">No Regulation</option>
                                        <option value="V - Voltage">V - Voltage</option>
                                        <option value="Hz - Frequency">Hz - Frequency</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">İçerik Başlık</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="ContentTitle" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">İçerik Detay</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea asp-for="ContentDescription" class="form-control form-control-modern"
                                        rows="4"></textarea>
                                </div>
                            </div>

                            <!-- Görsel / Belgeler -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="Image1File" class="form-control form-control-modern"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>
                            <!-- Görsel / Belgeler -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="Image2File" class="form-control form-control-modern"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>
                            <!-- Görsel / Belgeler -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="Image3File" class="form-control form-control-modern"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>
                            <!-- Görsel / Belgeler -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="Image4File" class="form-control form-control-modern"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>
                            <!-- Görsel / Belgeler -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="Image5File" class="form-control form-control-modern"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Teknik Döküman
                                    (PDF)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="DataSheetFile" class="form-control form-control-modern"
                                        accept=".pdf" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">3D Model</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="Model3DFile" class="form-control form-control-modern"
                                        accept=".glb,.stl" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Test Verisi</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="TestDataFile" class="form-control form-control-modern"
                                        accept=".xls,.xlsx" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Ölçü Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" asp-for="ScaleImageFile" class="form-control form-control-modern"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks
                                        10MB.</small>
                                </div>
                            </div>

                            <!-- Durum -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Durum</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="checkbox" asp-for="IsActive" /> <label class="ms-2">Aktif</label>
                                </div>
                            </div>

                            <!-- Sıra -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Sıra</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Order" type="number" class="form-control form-control-modern" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Aksiyon butonları -->
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                data-loading-text="Loading...">
                <i class="bx bx-save text-4 me-2"></i> Kaydet
            </button>
        </div>
        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
                class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">Geri
                Dön</a>
        </div>
    </div>
</form>