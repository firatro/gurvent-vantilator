@using GurventVantilator.Application.DTOs
@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "√úr√ºn Y√∂netimi";
}

<div class="row">
    <div class="col">
        <div class="card card-modern">
            <div class="card-body">
                <div class="datatables-header-footer-wrapper mt-2">
                    <div class="datatable-header">
                        <div class="row align-items-center mb-3">
                            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                <a asp-action="Create" class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">
                                    <i class="bx bx-plus"></i> √úr√ºn Ekle
                                </a>
                            </div>

                            <!-- üîπ Filtreleme Alanlarƒ± -->
                            <div class="col-12 col-lg">
                                <form method="get" asp-action="Index" class="row g-2 align-items-center">
                                    <div class="col-md-4">
                                        <input type="text" name="search" class="form-control form-control-modern"
                                               placeholder="√úr√ºn adƒ± veya kodu ara..." value="@Context.Request.Query["search"]" />
                                    </div>
                                    <div class="col-md-3">
                                        <select name="categoryId" class="form-control form-control-modern"
                                                asp-items="ViewBag.ProductCategories">
                                            <option value="">T√ºm Kategoriler</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <select name="isActive" class="form-control form-control-modern">
                                            <option value="">T√ºm√º</option>
                                            <option value="true" selected="@("true" == Context.Request.Query["isActive"])">Aktif</option>
                                            <option value="false" selected="@("false" == Context.Request.Query["isActive"])">Pasif</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-dark w-100">
                                            <i class="bx bx-search"></i> Filtrele
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- üîπ √úr√ºn Tablosu -->
                    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list" style="min-width: 750px;">
                        <thead>
                            <tr>
                                <th width="40" class="text-center">Id</th>
                                <th class="text-center">G√∂rsel</th>
                                <th class="text-center">√úr√ºn Adƒ±</th>
                                <th class="text-center">√úr√ºn Kodu</th>
                                <th class="text-center">Kategori</th>
                                <th class="text-center">Durum</th>
                                <th width="200" class="text-center">ƒ∞≈ülemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="bx bx-info-circle text-5 me-1"></i> Hen√ºz kayƒ±t bulunamadƒ±.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center align-middle"><strong>@item.Id</strong></td>

                                        <td class="text-center align-middle">
                                            @if (!string.IsNullOrEmpty(item.Image1Path))
                                            {
                                                <img src="@item.Image1Path" alt="@item.Name" class="img-thumbnail" style="max-width:50px;">
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>

                                        <td class="text-center align-middle">@item.Name</td>
                                        <td class="text-center align-middle">@item.Code</td>
                                        <td class="text-center align-middle">@item.ProductCategoryName</td>

                                        <td class="text-center align-middle">
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Pasif</span>
                                            }
                                        </td>

                                        <td class="text-center align-middle">
                                            <div class="btn-group d-flex justify-content-center" role="group">
                                                <a asp-action="Edit" asp-route-productId="@item.Id"
                                                   class="btn btn-primary btn-xs m-1 rounded">
                                                    <i class='far fa-edit'></i> D√ºzenle
                                                </a>
                                                <a href="#deleteModal"
                                                   class="btn btn-danger btn-xs m-1 rounded modal-basic"
                                                   onclick="setDeleteProductId(@item.Id)">
                                                    <i class='far fa-trash-alt'></i> Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <hr class="solid mt-5 opacity-4">

                    <!-- üîπ Silme Modal -->
                    <div id="deleteModal" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">√úr√ºn Silme</h2>
                            </header>
                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p class="mb-0">Bu √ºr√ºn√º silmek istediƒüinize emin misiniz?</p>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <form id="Delete" asp-action="Delete" method="post">
                                    <input type="hidden" name="productId" id="productId" />
                                    <div class="row">
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-danger">Sil</button>
                                            <button type="button" class="btn btn-default modal-dismiss">Vazge√ß</button>
                                        </div>
                                    </div>
                                </form>
                            </footer>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/examples/examples.modals.js"></script>
    <script src="~/vendor/pnotify/pnotify.custom.js"></script>
    <script>
        function setDeleteProductId(id) {
            document.getElementById("productId").value = id;
        }
    </script>
}
