@model IEnumerable<GurventVantilator.Application.DTOs.ProductDto>

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<div class="row">
    <div class="col">
        <div class="card card-modern">
            <div class="card-body">
                <div class="datatables-header-footer-wrapper mt-2">

                    <!-- HEADER -->
                    <div class="datatable-header">
                        <div class="row align-items-center mb-3">
                            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                <a asp-action="Create"
                                    class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">
                                    + Yeni Ürün
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- TABLE -->
                    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list"
                        style="min-width: 650px;">
                        <thead>
                            <tr>
                                <th width="40" class="text-center">Id</th>
                                <th class="text-center">Adı</th>
                                <th class="text-center">Kodu</th>
                                <th class="text-center">Seri</th>
                                <th class="text-center">Model</th>
                                @* <th class="text-center">Durum</th>
                                <th class="text-center">Sıra</th> *@
                                <th width="140" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        Kayıt bulunamadı.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center"><strong>@item.Id</strong></td>
                                        <td class="text-center"><strong>@item.Name</strong></td>
                                        <td class="text-center">@item.Code</td>
                                        <td class="text-center">@item.ProductSeriesName</td>
                                        <td class="text-center">@item.ProductModelName</td>
                                        @* <td class="text-center">
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td> *@
                                        @* <td class="text-center">@item.Order</td> *@

                                        <td width="200" class="text-center">
                                            <div class="btn-group d-flex" role="group">

                                                <a class="btn btn-primary btn-xs w-100 m-1 rounded" asp-action="Edit"
                                                    asp-route-id="@item.Id">
                                                    <i class='far fa-edit'></i> Düzenle
                                                </a>

                                                <a href="#deleteModal"
                                                    class="btn btn-danger btn-xs w-100 m-1 rounded modal-basic"
                                                    onclick="setDeleteProductId(@item.Id)">
                                                    <i class='far fa-trash-alt'></i> Sil
                                                </a>

                                            </div>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <!-- DELETE MODAL -->
                    <hr class="solid mt-5 opacity-4">

                    <div id="deleteModal" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">Ürün Silme</h2>
                            </header>

                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p class="mb-0">Bu ürünü silmek istediğinize emin misiniz?</p>
                                    </div>
                                </div>
                            </div>

                            <footer class="card-footer">
                                <form id="Delete" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" id="productId" />

                                    <div class="row">
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-danger">Sil</button>
                                            <button type="button" class="btn btn-default modal-dismiss">Vazgeç</button>
                                        </div>
                                    </div>
                                </form>
                            </footer>
                        </section>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/examples/examples.modals.js"></script>
    <script>
        function setDeleteProductId(id) {
            document.getElementById("productId").value = id;
        }
    </script>
}