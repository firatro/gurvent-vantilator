@using GurventVantilator.AdminUI.Models.Product
@model ProductEditViewModel

@{
    ViewData["Title"] = "Ürün Güncelle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">

                    <div class="row">
                        <!-- LEFT PANEL (ICON + TITLE) -->
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-cog"></i>
                            <h2 class="card-big-info-title">Ürün Düzenle</h2>
                            <p class="card-big-info-desc">Mevcut ürün bilgilerini güncelleyebilirsiniz.</p>
                        </div>

                        <!-- RIGHT PANEL (FORM FIELDS) -->
                        <div class="col-lg-3-5 col-xl-4-5">

                            <!-- TEMEL BİLGİLER -->
                            <h4 class="mb-3 mt-2">Temel Bilgiler</h4>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Name" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Ürün Adı</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Name" class="form-control form-control-modern" />
                                    <span asp-validation-for="Name" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Code" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Ürün Kodu</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Code" class="form-control form-control-modern" />
                                    <span asp-validation-for="Code" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Description" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea asp-for="Description" rows="3" class="form-control form-control-modern"></textarea>
                                </div>
                            </div>

                            <!-- SERİ & MODEL -->
                            <h4 class="mt-4 mb-3">Seri ve Model</h4>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ProductSeriesId" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Seri</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="ProductSeriesId" asp-items="ViewBag.SeriesList" class="form-control form-control-modern">
                                        <option value="">-- Seçiniz --</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ProductModelId" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Model</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="ProductModelId" asp-items="ViewBag.ModelList" class="form-control form-control-modern">
                                        <option value="">-- Seçiniz --</option>
                                    </select>
                                </div>
                            </div>

                            <!-- KULLANIM & ÇALIŞMA KOŞULLARI -->
                            <h4 class="mt-4 mb-3">Kullanım ve Çalışma Koşulları</h4>

                            <div class="form-group row pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Kullanım Tipleri</label>
                                <div class="col-lg-7 col-xl-6">
                                    <div class="border rounded p-2">
                                        @foreach (var ut in (IEnumerable<SelectListItem>)ViewBag.UsageTypeList)
                                        {
                                            <div class="form-check">
                                                <input type="checkbox" name="SelectedUsageTypeIds" value="@ut.Value"
                                                       class="form-check-input"
                                                       @(Model.SelectedUsageTypeIds.Contains(int.Parse(ut.Value)) ? "checked" : "") />
                                                <label class="form-check-label">@ut.Text</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Çalışma Koşulları</label>
                                <div class="col-lg-7 col-xl-6">
                                    <div class="border rounded p-2">
                                        @foreach (var wc in (IEnumerable<SelectListItem>)ViewBag.WorkingConditionList)
                                        {
                                            <div class="form-check">
                                                <input type="checkbox" name="SelectedWorkingConditionIds" value="@wc.Value"
                                                       class="form-check-input"
                                                       @(Model.SelectedWorkingConditionIds.Contains(int.Parse(wc.Value)) ? "checked" : "") />
                                                <label class="form-check-label">@wc.Text</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            <!-- İÇERİK ALANLARI -->
                            <h4 class="mt-4 mb-3">İçerik Alanları</h4>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ContentTitle" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">İçerik Başlığı</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="ContentTitle" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ContentDescription" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">İçerik Açıklaması</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea asp-for="ContentDescription" rows="3" class="form-control form-control-modern"></textarea>
                                </div>
                            </div>

                            <!-- PERFORMANS PARAMETRELERİ -->
                            <h4 class="mt-4 mb-3">Performans Parametreleri</h4>

                            <!-- AirFlow + Unit -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Hava Debisi
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <div class="row">
                                        <div class="col-7">
                                            <input asp-for="AirFlow" class="form-control form-control-modern" />
                                        </div>
                                        <div class="col-5">
                                            <select asp-for="AirFlowUnit" class="form-control form-control-modern">
                                                <option value="">-- Birim --</option>
                                                <option value="m³/h">m³/h</option>
                                                <option value="m³/s">m³/s</option>
                                                <option value="L/s">L/s</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- TotalPressure + Unit -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Basınç
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <div class="row">
                                        <div class="col-7">
                                            <input asp-for="TotalPressure" class="form-control form-control-modern" />
                                        </div>
                                        <div class="col-5">
                                            <select asp-for="TotalPressureUnit" class="form-control form-control-modern">
                                                <option value="">-- Birim --</option>
                                                <option value="Pa">Pa</option>
                                                <option value="mmH₂O">mmH₂O</option>
                                                <option value="inchH₂O">inchH₂O</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Power -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Power" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Güç (kW)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Power" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <!-- Voltage -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Voltage" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Gerilim (V)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Voltage" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <!-- Frequency -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Frequency" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Frekans (Hz)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Frequency" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <!-- SpeedControl -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="SpeedControl" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Hız Kontrol Tipi</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="SpeedControl" class="form-control form-control-modern" placeholder="Inverter, Triac vb." />
                                </div>
                            </div>

                            <!-- Temperature -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Temperature" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Sıcaklık (°C)</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Temperature" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <!-- DOSYALAR & GÖRSELLER -->
                            <h4 class="mt-4 mb-3">Dosyalar ve Görseller</h4>

                            @{
                                var images = new[]
                                {
                                    new { Path = Model.Image1Path, Label = "Image1File", Title = "Görsel 1" },
                                    new { Path = Model.Image2Path, Label = "Image2File", Title = "Görsel 2" },
                                    new { Path = Model.Image3Path, Label = "Image3File", Title = "Görsel 3" },
                                    new { Path = Model.Image4Path, Label = "Image4File", Title = "Görsel 4" },
                                    new { Path = Model.Image5Path, Label = "Image5File", Title = "Görsel 5" }
                                };
                            }

                            @foreach (var img in images)
                            {
                                <div class="form-group row align-items-center pb-3">
                                    <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">@img.Title</label>
                                    <div class="col-lg-7 col-xl-6">
                                        <input type="file" name="@img.Label" class="form-control form-control-modern" />

                                        @if (!string.IsNullOrEmpty(img.Path))
                                        {
                                            <img src="@Url.Content($"~/{img.Path}")" width="120" class="img-thumbnail mt-2" />
                                        }
                                    </div>
                                </div>
                            }

                            <!-- DataSheet -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="DataSheetFile" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    DataSheet (PDF)
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="DataSheetFile" type="file" class="form-control form-control-modern" />

                                    @if (!string.IsNullOrEmpty(Model.DataSheetPath))
                                    {
                                        <a href="@Url.Content($"~/{Model.DataSheetPath}")" target="_blank"
                                           class="d-block mt-2 small text-success">
                                            @System.IO.Path.GetFileName(Model.DataSheetPath)
                                        </a>
                                    }
                                </div>
                            </div>

                            <!-- 3D Model -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Model3DFile" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    3D Model (.glb)
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Model3DFile" type="file" class="form-control form-control-modern" />

                                    @if (!string.IsNullOrEmpty(Model.Model3DPath))
                                    {
                                        <a href="@Url.Content($"~/{Model.Model3DPath}")" target="_blank"
                                           class="d-block mt-2 small text-success">
                                            @System.IO.Path.GetFileName(Model.Model3DPath)
                                        </a>
                                    }
                                </div>
                            </div>

                            <!-- Ölçek Görseli -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ScaleImageFile" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Ölçek Görseli
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="ScaleImageFile" type="file" class="form-control form-control-modern" />

                                    @if (!string.IsNullOrEmpty(Model.ScaleImagePath))
                                    {
                                        <img src="@Url.Content($"~/{Model.ScaleImagePath}")" width="120" class="img-thumbnail mt-2" />
                                    }
                                </div>
                            </div>

                            <!-- GENEL ALANLAR -->
                            <h4 class="mt-4 mb-3">Genel Bilgiler</h4>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Order" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Sıra</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Order" class="form-control form-control-modern" />
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="IsActive" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Durum</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="IsActive" class="form-control form-control-modern">
                                        <option value="true">Aktif</option>
                                        <option value="false">Pasif</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit"
                    class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                    data-loading-text="Loading...">
                <i class="bx bx-save text-4 me-2"></i> Güncelle
            </button>
        </div>

        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
               class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">
                Geri Dön
            </a>
        </div>
    </div>

</form>
