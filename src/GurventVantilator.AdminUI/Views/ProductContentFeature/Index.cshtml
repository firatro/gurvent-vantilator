@using GurventVantilator.AdminUI.Models.ProductContentFeature
@model IEnumerable<ProductContentFeatureViewModel>

@{
    ViewData["Title"] = "Ürün İçerik Özellikleri";
}

<div class="row">
    <div class="col">
        <div class="card card-modern">
            <div class="card-body">
                <div class="datatables-header-footer-wrapper mt-2">
                    <div class="datatable-header">
                        <div class="row align-items-center mb-3">
                            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                                <a asp-action="Create"
                                   class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">
                                    + Özellik Ekle
                                </a>
                            </div>
                            <div class="col-8 col-lg-auto ms-auto ml-auto mb-3 mb-lg-0">
                                <form asp-action="Index" method="get"
                                      class="d-flex align-items-lg-center flex-column flex-lg-row">
                                    <label class="ws-nowrap me-3 mb-0">Ürün Seçimi:</label>
                                    <select class="form-control select-style-1 filter-by" name="productId"
                                            onchange="this.form.submit()">
                                        <option value="">Tümü</option>
                                        @foreach (var product in (SelectList)ViewBag.Products)
                                        {
                                            if (product.Value == ViewBag.Products.SelectedValue?.ToString())
                                            {
                                                <option value="@product.Value" selected>@product.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@product.Value">@product.Text</option>
                                            }
                                        }
                                    </select>
                                </form>
                            </div>
                        </div>
                    </div>

                    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-productcontent-list"
                           style="min-width: 550px;">
                        <thead>
                            <tr>
                                <th width="30" class="text-center">#</th>
                                <th class="text-center">Ürün</th>
                                <th class="text-center">Başlık (Key)</th>
                                <th class="text-center">İçerik (Value)</th>
                                <th class="text-center">Sıra</th>
                                <th width="200" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model == null || !Model.Any())
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted">
                                        Hiç kayıt bulunamadı.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                int count = 1;
                                foreach (var item in Model.OrderBy(x => x.Order))
                                {
                                    <tr>
                                        <td class="text-center">@count</td>
                                        <td class="text-center">
                                            <strong><a href="#">@item.ProductName</a></strong>
                                        </td>
                                        <td class="text-center">@item.Key</td>
                                        <td class="text-center">@item.Value</td>
                                        <td class="text-center">@item.Order</td>
                                        <td class="text-center">
                                            <div class="btn-group d-flex" role="group">
                                                <a class="btn btn-primary btn-xs w-100 m-1 rounded"
                                                   role="button"
                                                   asp-action="Edit"
                                                   asp-route-id="@item.Id">
                                                    <i class='far fa-edit'></i> Düzenle
                                                </a>
                                                <a href="#deleteModal"
                                                   class="btn btn-danger btn-xs w-100 m-1 rounded modal-basic"
                                                   onclick="setDeleteFeatureId(@item.Id)">
                                                    <i class='far fa-trash-alt'></i> Sil
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>
                    </table>

                    <hr class="solid mt-5 opacity-4">

                    <!-- Silme Modal -->
                    <div id="deleteModal" class="modal-block mfp-hide">
                        <section class="card">
                            <header class="card-header">
                                <h2 class="card-title">İçerik Özelliği Silme</h2>
                            </header>
                            <div class="card-body">
                                <div class="modal-wrapper">
                                    <div class="modal-text">
                                        <p class="mb-0">Bu özelliği silmek istediğinize emin misiniz?</p>
                                    </div>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <form id="Delete" asp-action="Delete" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" id="featureId" />
                                    <div class="row">
                                        <div class="col-md-12 text-end">
                                            <button type="submit" class="btn btn-danger">Sil</button>
                                            <button type="button" class="btn btn-default modal-dismiss">Vazgeç</button>
                                        </div>
                                    </div>
                                </form>
                            </footer>
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/examples/examples.modals.js"></script>
    <script src="~/vendor/pnotify/pnotify.custom.js"></script>
    <script>
        function setDeleteFeatureId(id) {
            document.getElementById("featureId").value = id;
        }
    </script>
}
