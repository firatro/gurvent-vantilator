@model ProductContentFeatureViewModel

@{
    ViewData["Title"] = "İçerik Özelliği Düzenle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">

                        <!-- Sol Bilgi Paneli -->
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-edit-alt"></i>
                            <h2 class="card-big-info-title">Özellik Düzenle</h2>
                            <p class="card-big-info-desc">
                                Model içerik özelliğini güncelleyebilirsiniz.
                            </p>
                        </div>

                        <!-- Sağ Form Alanları -->
                        <div class="col-lg-3-5 col-xl-4-5">

                            <!-- MODEL SEÇİMİ -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ProductModelId"
                                    class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Model
                                </label>

                                <div class="col-lg-7 col-xl-6">
                                    <select class="form-control form-control-modern" asp-for="ProductModelId"
                                        asp-items="ViewBag.Models">
                                        <option value="">Seçiniz...</option>
                                    </select>

                                    <span asp-validation-for="ProductModelId" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <!-- KEY -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Key" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Başlık (Key)
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Key" class="form-control form-control-modern" />
                                    <span asp-validation-for="Key" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <!-- VALUE -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Value" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    İçerik (Value)
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea asp-for="Value" rows="3"
                                        class="form-control form-control-modern"></textarea>
                                    <span asp-validation-for="Value" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <!-- ORDER -->
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="Order" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Sıra
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Order" type="number" class="form-control form-control-modern" />
                                    <span asp-validation-for="Order" class="badge badge-danger"></span>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- BUTTONS -->
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit" class="btn btn-primary btn-px-4 py-3 font-weight-semibold d-flex align-items-center">
                <i class="bx bx-save text-4 me-2"></i> Güncelle
            </button>
        </div>

        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
                class="btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">
                <i class="bx bx-arrow-back text-4 me-2"></i> Geri Dön
            </a>
        </div>
    </div>
</form>