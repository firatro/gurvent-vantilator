@using GurventVantilator.AdminUI.Models.TestData
@model TestDataUploadViewModel

@{
    ViewData["Title"] = "Test Datası Ekle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Create" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />

    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">

                        <!-- SOL BİLGİ ALANI -->
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-line-chart"></i>
                            <h2 class="card-big-info-title">Test Datası Ekle</h2>
                            <p class="card-big-info-desc">
                                Seçilen ürüne ait fan test datasını
                                Excel dosyası ile yükleyebilirsiniz.
                            </p>
                        </div>

                        <!-- FORM ALANI -->
                        <div class="col-lg-3-5 col-xl-4-5">

                            <!-- TEST ADI -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Test Adı
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="TestName" />
                                </div>
                            </div>

                            <!-- ÇAP -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Çap (mm)
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="number" step="any" class="form-control form-control-modern"
                                        asp-for="Diameter" />
                                </div>
                            </div>

                            <!-- TEST TARİHİ -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Test Tarihi
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="date" class="form-control form-control-modern" asp-for="TestDate" />
                                </div>
                            </div>

                            <!-- EXCEL DOSYASI -->
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">
                                    Excel Dosyası
                                </label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" class="form-control form-control-modern" asp-for="ExcelFile"
                                        accept=".xls,.xlsx" />
                                    <small class="text-muted">
                                        RPM, Q, Pt kolonlarını içeren Excel dosyası yükleyiniz.
                                    </small>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                data-loading-text="Yükleniyor...">
                <i class="bx bx-save text-4 me-2"></i>
                Kaydet
            </button>
        </div>

        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
                class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">
                Geri Dön
            </a>
        </div>
    </div>

</form>