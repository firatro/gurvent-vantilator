@using GurventVantilator.AdminUI.Models.ProductCategory
@model ProductCategoryCreateViewModel

@{
    ViewData[index: "Title"] = "Ürün Kategori Ekle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-category"></i>
                            <h2 class="card-big-info-title">Ürün Kategori Ekle</h2>
                            <p class="card-big-info-desc">Ürün Kategori eklemek için bilgileri doldurun.</p>
                        </div>
                        <div class="col-lg-3-5 col-xl-4-5">
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Name">Ürün Kategori Adı</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Name" />
                                    <span asp-validation-for="Name" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label asp-for="ParentCategoryId" class="col-lg-5 col-xl-3 control-label text-lg-end mb-0">Üst Kategori</label>
                                <div class="col-lg-7 col-xl-6">
                                    <select asp-for="ParentCategoryId" asp-items="Model.ParentCategoryList" class="form-control form-control-modern">
                                        <option value="">(Ana Kategori)</option>
                                    </select>
                                     <span asp-validation-for="ParentCategoryId" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Description">Ürün Kategori Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                     <textarea type="text" class="form-control form-control-modern editable"
                                        asp-for="Description" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ImageFile">Ana Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="file" class="form-control form-control-modern" asp-for="ImageFile"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <span asp-validation-for="ImageFile" class="badge badge-danger"></span>
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks 10MB.</small>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="IsActive">Durum</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="checkbox" asp-for="IsActive" />
                                    <label class="ms-2">Aktif</label>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="Order">Sıra</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input asp-for="Order" type="number" class="form-control form-control-modern" value="0"/>
                                    <span asp-validation-for="Order" class="badge badge-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                data-loading-text="Loading...">
                <i class="bx bx-save text-4 me-2"></i> Kaydet
            </button>
        </div>
        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
                class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">Geri
                Dön</a>
        </div>
    </div>
</form>