@using GurventVantilator.AdminUI.Models.AboutUs
@model AboutUsEditViewModel

@{
    ViewData["Title"] = "Hakkımızda Güncelle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-news"></i>
                            <h2 class="card-big-info-title">Hakkımızda Güncelle</h2>
                            <p class="card-big-info-desc">Hakkımızda güncellemek için bilgileri değiştirin</p>
                        </div>
                        <div class="col-lg-3-5 col-xl-4-5">
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Title">Başlık</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="Title" />
                                    <span asp-validation-for="Title" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Description">Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea type="text" class="form-control form-control-modern editable"
                                        asp-for="Description" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="ExtraTitle">Ek
                                    Başlık</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="ExtraTitle" />
                                    <span asp-validation-for="ExtraTitle" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ExtraDescription">Ek Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea type="text" class="form-control form-control-modern editable"
                                        asp-for="ExtraDescription" rows="4"></textarea>
                                    <span asp-validation-for="ExtraDescription" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ImageFile">Mevcut Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                                    {
                                        <img src="@Model.ImagePath" alt="Hakkımızda Görseli" style="max-width:100px;"
                                            class="img-thumbnail mb-2" />
                                    }
                                    <input type="file" asp-for="ImageFile"
                                        class="form-control form-control-modern editable"
                                        accept=".jpg,.jpeg,.png,.webp" />
                                    <input type="hidden" asp-for="ImageFile" />
                                    <small class="text-muted d-block mt-1">Desteklenen formatlar: JPG, PNG, WEBP. Maks 10MB.</small>
                                    <span asp-validation-for="ImageFile" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ExperienceYear">Tecrübe Yılı</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="ExperienceYear" />
                                    <span asp-validation-for="ExperienceYear" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="HappyClients">Mutlu Müşteri</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="HappyClients" />
                                    <span asp-validation-for="HappyClients" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="CompletedProjects">Tamamlanan Proje</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="CompletedProjects" />
                                    <span asp-validation-for="CompletedProjects" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Awards">Ödül</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="Awards" />
                                    <span asp-validation-for="Awards" class="badge badge-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="YoutubeVideoUrl">Youtube Video Url</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern editable"
                                        asp-for="YoutubeVideoUrl" />
                                    <span asp-validation-for="YoutubeVideoUrl" class="badge badge-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row action-buttons">
        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <button id="btnEnableEdit" type="button"
                class="btn btn-warning btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1">
                <i class="bx bx-edit text-4 me-2"></i> Güncelle
            </button>
        </div>
        <div class="col-12 col-md-auto">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1 editable"
                data-loading-text="Loading...">
                <i class="bx bx-save text-4 me-2"></i> Kaydet
            </button>
        </div>
        @* <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
        <a asp-controller="Home" asp-action="Index"
        class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">Geri
        Dön</a>
        </div> *@
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Sayfa açıldığında inputları kapat
            $(".editable").prop("disabled", true);
            $("#btnSave").prop("disabled", true);

            $("#btnEnableEdit").click(function () {
                $(".editable").prop("disabled", false);
                $("#btnSave").prop("disabled", false);

                // Güncelle butonunu pasifleştir
                $(this).prop("disabled", true);
            });
        });
    </script>
}
