@using GurventVantilator.AdminUI.Models.Project
@model ProjectEditViewModel


@{
    ViewData["Title"] = "Proje Güncelle";
}

<form class="ecommerce-form action-buttons-fixed" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row mt-2">
        <div class="col">
            <section class="card card-modern card-big-info">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2-5 col-xl-1-5">
                            <i class="card-big-info-icon bx bx-duplicate"></i>
                            <h2 class="card-big-info-title">Proje Güncelle</h2>
                            <p class="card-big-info-desc">Projeyi güncellemek için bilgileri değiştirin.</p>
                        </div>
                        <div class="col-lg-3-5 col-xl-4-5">
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="Title">Başlık</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Title" />
                                    <span asp-validation-for="Title" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0" asp-for="Subtitle">Alt
                                    Başlık</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="Subtitle" />
                                    <span asp-validation-for="Subtitle" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end pt-2 mt-1 mb-0"
                                    asp-for="CustomerInfo">Müşteri</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern"
                                        asp-for="CustomerInfo" />
                                    <span asp-validation-for="CustomerInfo" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ProjectDate">Çalışma Tarihi</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="date" class="form-control form-control-modern" asp-for="ProjectDate" />
                                    <span asp-validation-for="ProjectDate" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="MainImageFile">Ana Görsel</label>
                                <div class="col-lg-7 col-xl-6">
                                    @if (!string.IsNullOrEmpty(Model.MainImagePath))
                                    {
                                        <img src="@Model.MainImagePath" alt="Kapak Görsel" style="max-width:100px;"
                                            class="img-thumbnail mb-2"/>
                                    }
                                    <input type="file" asp-for="MainImageFile"
                                        class="form-control form-control-modern" accept=".jpg,.jpeg,.png,.webp" />
                                    <input type="hidden" asp-for="MainImageFile" />
                                    <span asp-validation-for="MainImageFile" class="badge badge-danger"></span>    
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ContentImage1File">İçerik Görsel (1)</label>
                                <div class="col-lg-7 col-xl-6">
                                    @if (!string.IsNullOrEmpty(Model.ContentImage1Path))
                                    {
                                        <img src="@Model.ContentImage1Path" alt="İçerik Görsel (1)" style="max-width:100px;"
                                            class="img-thumbnail mb-2" />
                                    }
                                    <input type="file" asp-for="ContentImage1File"
                                        class="form-control form-control-modern" accept=".jpg,.jpeg,.png,.webp" />
                                    <input type="hidden" asp-for="ContentImage1File" />
                                    <span asp-validation-for="ContentImage1File" class="badge badge-danger"></span>    
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end mb-0"
                                    asp-for="ContentImage2File">İçerik Görsel (2)</label>
                                <div class="col-lg-7 col-xl-6">
                                    @if (!string.IsNullOrEmpty(Model.ContentImage2Path))
                                    {
                                        <img src="@Model.ContentImage2Path" alt="İçerik Görsel (2)" style="max-width:100px;"
                                            class="img-thumbnail mb-2" />
                                    }
                                    <input type="file" asp-for="ContentImage2File"
                                        class="form-control form-control-modern" accept=".jpg,.jpeg,.png,.webp" />
                                    <input type="hidden" asp-for="ContentImage2File" />
                                    <span asp-validation-for="ContentImage2File" class="badge badge-danger"></span>    
                                </div>
                            </div>

                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end pt-2 mt-1 mb-0"
                                    asp-for="IntroText">Giriş Metni</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="IntroText" />
                                    <span asp-validation-for="IntroText" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end pt-2 mt-1 mb-0"
                                    asp-for="Description">Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea class="form-control form-control-modern" asp-for="Description"
                                        rows="6"></textarea>
                                    <span asp-validation-for="Description" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end pt-2 mt-1 mb-0"
                                    asp-for="ExtraTitle">Ek Başlık</label>
                                <div class="col-lg-7 col-xl-6">
                                    <input type="text" class="form-control form-control-modern" asp-for="ExtraTitle" />
                                    <span asp-validation-for="ExtraTitle" class="badge badge-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row align-items-center pb-3">
                                <label class="col-lg-5 col-xl-3 control-label text-lg-end pt-2 mt-1 mb-0"
                                    asp-for="ExtraDescription">Ek Açıklama</label>
                                <div class="col-lg-7 col-xl-6">
                                    <textarea class="form-control form-control-modern" asp-for="ExtraDescription"
                                        rows="6"></textarea>
                                    <span asp-validation-for="ExtraDescription" class="badge badge-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row action-buttons">
        <div class="col-12 col-md-auto">
            <button type="submit"
                class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1"
                data-loading-text="Loading...">
                <i class="bx bx-save text-4 me-2"></i> Kaydet
            </button>
        </div>
        <div class="col-12 col-md-auto px-md-0 mt-3 mt-md-0">
            <a asp-action="Index"
                class="cancel-button btn btn-light btn-px-4 py-3 border font-weight-semibold text-color-dark text-3">Geri
                Dön</a>
        </div>
    </div>
</form>